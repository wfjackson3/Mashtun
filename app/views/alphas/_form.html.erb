<%= form_for(@alpha) do |f| %>
  <% if @alpha.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@alpha.errors.count, "error") %> prohibited this alpha from being saved:</h2>

      <ul>
      <% @alpha.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
    <p class="fineprint">
    	We won't give your email address out to anyone and we will only email you about Mashtun.
    </p>
  </div>
  <div class="field">
    <%= f.label :city_id, "City" %>
    <%= link_to_function "new city", "toggle_fields('div.newcity')" %><br />
    <div>
    	<%= f.collection_select :city_id, City.all, :id, :full_name, :include_blank => true %>
  	</div>
		<%= render :partial => 'city', :locals => {:builder => :city} %>
		<p class="fineprint">
			We want to know what city you think we should use for our alpha launch. Vote for your city and tell your friends.
		</p>
  </div>
  <div class="field">
    <%= f.label :brewery_id, "Brewery" %>
    <%= link_to_function "new brewery", "toggle_fields('div.newbrewery')" %><br />
    <div>
	    <%= f.collection_select :brewery_id, Brewery.all, :id, :name, :include_blank => true %>
    </div>
    <%= render :partial => 'brewery', :locals => {:builder => :brewery} %>
    <p class="fineprint">
    	If there is a specific brewery that you really wish you had access to locally, let us know. We exist to get you the beer you want.
  	</p>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
